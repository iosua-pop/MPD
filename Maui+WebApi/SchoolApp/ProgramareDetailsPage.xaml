<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SchoolApp.ProgramareDetailsPage"
             Title="ProgramareDetailsPage">

    <StackLayout Padding="20">
        <Label Text="Data si Ora:" />
        <DatePicker x:Name="dataPicker" MinimumDate="{Binding MinDate}" />
        <TimePicker x:Name="timePicker" />

        <Label Text="Locatia:" />
        <Entry x:Name="adresaEntry" Placeholder="Locatia lectiei" />

        <Label Text="Selecteaza Profesorul:" />
        <Picker x:Name="teacherPicker"/>

        <Button Text="Salveaza" Clicked="OnSaveButtonClicked" />
    </StackLayout>
</ContentPage>